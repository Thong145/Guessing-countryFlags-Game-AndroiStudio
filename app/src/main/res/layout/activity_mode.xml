<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    >
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/AllMode"
        android:layout_gravity="right">
        <ImageButton
            android:id="@+id/BtnHome"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="50dp"
            android:background="@drawable/home_icon"
            android:layout_marginLeft="140dp"
            />
        <ImageButton
            android:id="@+id/BtnSound"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="50dp"
            android:background="@drawable/unmuted"
            android:layout_marginLeft="70dp"
            />
        <ImageButton
            android:id="@+id/BtnPause"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="50dp"
            android:background="@drawable/pause_icon"

            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn chế dộ chơi"
        android:textSize="50dp"
        android:padding="30dp"
        android:textAlignment="center"
        android:layout_marginTop="-10dp"
        android:background="#ccFF"
        android:gravity="center_horizontal"
        android:layout_below="@+id/AllMode"/>
    <Button
        android:id="@+id/BtnChon1"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:text="Chế độ 1"
        android:textSize="50dp"
        android:background="@drawable/custom_button"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/BtnChon2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/BtnChon1"
        android:layout_gravity="center"
        android:text="Chế độ 2"
        android:textSize="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"
        />
    <Button
        android:id="@+id/BtnBack"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button"
        android:text="trở về"
        android:textSize="50dp" />
</LinearLayout>